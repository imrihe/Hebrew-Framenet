.container
    .content
        header.page-header
            h1 #{title}
                small.subtitle  Subtitle text
        article.row
            .span14
                h3 number of membersList: #{membersList.length} 
                - if (membersList.length)
                    table.zebra-striped
                        thead
                            tr
                                th Nom
                                th Mail
                                th Date
                        tbody
                        - membersList.forEach(function(member){
                            tr
                                td= member['title']+" "+member['firstname']+" "+member['lastname']
                                td= member['mail']
                                td= member['date']
                        - })
                - else
                    p No registered members yet.
    
